@using TheCakeMaker.Models;
@model List<GioHang>
@{
    ViewBag.Title = "Giohang";
}

<h2>Giohang</h2>
<table style="text-align:center" cellspacing="20" border="1">
    <tr>
        <td>Mã bánh</td>

        <td>Tên bánh</td>

        <td>Ảnh </td>

        <td>Đơn giá</td>

        <td>Số lượng</td>

        <td>Thành Tiền</td>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSP</td>

            <td>@item.sTenSp</td>

            <td><img src="@item.sHinhAnh" width="100" height="100" /></td>

            <td>
                @String.Format("{0:0,0}", item.dDonGia) VNĐ
            </td>

            <td>@item.iSoLuong</td>

            <td>
                @String.Format("{0:0,0}", item.TongTien) VNĐ
            </td>
        </tr>
    }

    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @using (Html.BeginForm("DatHang", "GioHang"))
            {
                <input type="submit" value="Đặt hàng"/>
            }
        </td>
    </tr>
</table>
